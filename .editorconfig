# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.js]
indent_style = tab
indent_size = 4

# Tabs in scss
[**.scss]
indent_style = tab
indent_size = 4

[**.hbs]
indent_style = tab
indent_size = 4

